var mjAPI = require("../lib/mj-single.js");

var format = "TeX";
var font = "TeX";
while (process.argv[2].substr(0,2) === "--") {
  switch (process.argv[2]) {
    case "--inline":
      format = "inline-TeX";
      process.argv.splice(2,1);
      break;

    case "--font":
      font = process.argv[3];
      if (font === "STIX") {font = "STIX-Web"}
      process.argv.splice(2,2);
      break;

    default:
      console.error("Unknown option '"+process.argv[2]+"'");
      process.exit(1);
      break;
  }
}
mjAPI.config({MathJax: {SVG: {font: font}}});
mjAPI.start();

if (process.argv.length !== 3) {
  console.error("Usage: tex2svg [--inline] [--font fontname] 'math' > file.svg");
  process.exit(1);
}

mjAPI.typeset({math:process.argv[2], format:format, svg:true, img:true}, function (data) {
  if (!data.errors) {console.log(data.svg)}
});
