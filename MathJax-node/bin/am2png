var mjAPI = require("../lib/mj-single.js");

var font = "TeX";
if (process.argv[2] === "--font") {
  if (process.argv.length < 4) {
    console.error("missing font name");
    process.exit(1);
  }
  font = process.argv[3];
  process.argv.splice(2,2);
  if (font === "STIX") {font = "STIX-Web"}
}
mjAPI.config({MathJax: {SVG: {font: font}}});
mjAPI.start();

if (process.argv.length !== 3) {
  console.error("Usage: am2png [--font fontname] 'math' > file.png");
  process.exit(1);
}

mjAPI.typeset({math:process.argv[2], format:"AsciiMath", png:true}, function (data) {
  if (!data.errors) {process.stdout.write(new Buffer(data.png.slice(22),'base64'))}
});
